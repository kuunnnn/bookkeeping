{
  "name": "bookkeeping-server-node",
  "version": "0.0.2",
  "scripts": {
    "fmt": "npx prettier --write '**/*.{ts,js,md}'",
    "pretty-quick": "pretty-quick",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly ./src/setup.ts",
    "pm2:start": "pm2 start processes.json",
    "pm2:stop": "pm2 stop all",
    "node:start": "node ./dist/setup.js",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc",
    "gen-graphql-ts": "graphql-codegen --config graphql-codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "pretty-quick --staged",
      "git add"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.15.0",
    "@graphql-codegen/introspection": "1.15.0",
    "@graphql-codegen/typescript": "1.15.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/hapi__joi": "^17.1.0",
    "@types/ioredis": "^4.16.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-json-error": "^3.1.2",
    "@types/koa-pino-logger": "^2.1.6",
    "@types/koa__router": "^8.0.2",
    "@types/lodash": "^4.14.154",
    "@types/node": "^14.0.5",
    "@types/node-forge": "^0.9.3",
    "@types/node-rsa": "^1.0.0",
    "@types/pino-multi-stream": "^5.0.0",
    "@types/pinyin": "^2.8.1",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^8.0.8",
    "apollo-server-koa": "^2.14.0",
    "bcryptjs": "^2.4.3",
    "cls-hooked": "^4.2.2",
    "cls-proxify": "^1.0.1",
    "dayjs": "^1.8.28",
    "dotenv": "^8.2.0",
    "graphql": "^15.0.0",
    "graphql-tools": "^6.0.3",
    "ioredis": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^5.2.0",
    "koa-jwt": "^4.0.0",
    "lodash": "^4.17.15",
    "mysql": "^2.18.1",
    "node-forge": "^0.9.1",
    "node-rsa": "^1.0.8",
    "pino": "^6.3.2",
    "pino-http": "^5.2.0",
    "pino-multi-stream": "^5.0.0",
    "pino-pretty": "^4.0.0",
